<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<License>Apache</License>
		<Platforms>AnyCPU</Platforms>
		<IsPackable>true</IsPackable>
		<IsTrimmable>true</IsTrimmable>
		<OutputType>Library</OutputType>
		<PackageTags>notio</PackageTags>
		<PackageIcon>Notio.png</PackageIcon>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		
		<ReleaseNotes>Initial release of Notio.Common package.</ReleaseNotes>
		<Description>Notio.Common is a .NET library for managing common functionality.</Description>
	</PropertyGroup>

	<Import Project="..\Notio.Build.props" />

	<PropertyGroup Condition="'$(Configuration)' == 'Release'">
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

</Project>
