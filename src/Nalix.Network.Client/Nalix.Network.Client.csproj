<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <IsTrimmable>true</IsTrimmable>
    <OutputType>Library</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

    <Version>0.7.89</Version>
    <PackageVersion>0.7.89</PackageVersion>

    <Description>Client-side networking for the Nalix TCP library, including secure handshakes and connection management.</Description>

    <PackageReleaseNotes>
      - Initial implementation of X25519 secure handshake for TCP client
      - Lightweight and high-performance design for embedded or cross-platform usage
      - Integrated with Nalix.Common
    </PackageReleaseNotes>
  </PropertyGroup>

  <Import Project="..\Nalix.Build.props" />
  <Import Project="..\Package.Build.props" />

  <ItemGroup>
    <ProjectReference Include="..\Nalix.Common\Nalix.Common.csproj" />
    <ProjectReference Include="..\Nalix.Shared\Nalix.Shared.csproj" />
  </ItemGroup>

</Project>
