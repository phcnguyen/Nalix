<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<License>Apache</License>
		<Nullable>enable</Nullable>
		<Platforms>AnyCPU</Platforms>
		<IsPackable>true</IsPackable>
		<IsTrimmable>true</IsTrimmable>
		<OutputType>Library</OutputType>
		<PackageTags>notio</PackageTags>
		<PackageIcon>Notio.png</PackageIcon>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>

    <Version>0.3.50</Version>
    <PackageVersion>0.3.50</PackageVersion>
    
		<PackageReleaseNotes>Includes bug fixes and performance improvements.</PackageReleaseNotes>
		<PackageDescription>Notio.Logging is a logging library that integrates with various logging providers to facilitate logging in your .NET applications.</PackageDescription>
	</PropertyGroup>

	<Import Project="..\Notio.Build.props" />

	<PropertyGroup Condition="'$(Configuration)' == 'Release'">
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\Notio.Common\Notio.Common.csproj" />
	</ItemGroup>

</Project>
